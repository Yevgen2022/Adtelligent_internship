{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "files": {
    "includes": [
      "**",
      "!dist",
      "!node_modules",
      "!public",
      "!build",
      "!coverage",
      "!.next",
      "!.vercel",
      "!.vite",
      "!.idea",
      "!**/prebid*.js",
      "!.github"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noUnknownAtRules": "off"
      }
    }
  }
}
